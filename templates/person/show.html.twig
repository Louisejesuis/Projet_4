{% extends 'base.html.twig' %}

{% block title %}Annonce | {{ person.id }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6">
            <h1 class="my-3">{{ person.firstName }} {{ person.lastName }}</h1>
        </div>
        {% if person.user.id == user.id %}
            <div class="col-3">
                <a href="{{ path('person_edit', {'id': person.id}) }}" class="btn  btn-light my-4">Éditer l'annonce <i
                            class="far fa-edit fa-lg"></i></a>

            </div>
            <div class="col-3">
                <a href="{{ path('person_delete', {'id': person.id}) }}" class="btn btn-outline-danger my-4">Supprimer
                    l'annonce <i
                            class="far fa-trash-alt fa-lg"></i></a>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-6">
            <img src="{{ vich_uploader_asset(person, 'imageFile') }}" alt="" class="rounded img-fluid picture">
        </div>
        <div class="col-6">
            <ul>
                <li>
                    Date de naissance : {{ person.birthDate ? person.birthDate|date('d-m-Y') : '' }}
                </li>
                <li>
                    Rôle : {{ person.role.name }}
                </li>
                <li>
                    École : {{ person.school.name }} ( {{ person.language.name }} )
                </li>
                <li>
                    Prix : {{ person.price }}
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="row mt-3">
                <h3>Description :</h3>
            </div>
            <div class="row mb-3">
                <h6>{{ person.description }}</h6>
            </div>
            <div class="row">
                <h3>Qualités :</h3>
            </div>
            <div class="row mb-3">
                <h6>{{ person.quality }}</h6>
            </div>
            <div class="row">
                <h3>Défauts : </h3>
            </div>
            <div class="row mb-3">
                <h6>{{ person.defect }}</h6>
            </div>
        </div>
        <div class="col-6">
            <h2 class="quote">"{{ person.quote }}"</h2>
        </div>
    </div>

{% endblock %}